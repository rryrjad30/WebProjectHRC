  <script>
  $(function(){
    $('#find').on('click', function(){
      var location = $("#location").val();
      var job_title = $("#job_title").val();
      var salary = $('#salary').val();
      var date = $('#date').val()
      $.ajax({
        url:"/api/company/quickhire?location="+location+"&job_title="+job_title,
        type: "GET",
        dataType: "json",
        success: function(data){
          $(data).each(function(index,value){
            if (data[index].hire_allow === "Yes"){
              $(".findResult").children().remove()
              $(".findResult").append("<div class='well'><div class='row'><form method='POST' action='/company/quickhire/hire/"+data[index]._id+"'><div class='col-xs-1'><img src='"+data[index].image+"' class='img-responsive img-circle' width=33 height=33></div><div class='col-xs-11'><span>"+data[index].name+"</span><br /><span>"+data[index].location+"</span></div><button type='submit' class='btn btn-primary pull-right' value='Hire'>Hire</button></form></div></div>")
            } else {
              $(".findResult").children().remove()
              $(".findResult").append("<div class='well'><div class='row'><div class='text-center'>No result</div></div></div>")
            }
          })
        },
        error: function(){
          alert("Error getting data")
        }
      })
    })
  })
